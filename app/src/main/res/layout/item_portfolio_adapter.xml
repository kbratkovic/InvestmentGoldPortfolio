<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?colorSurface"
    app:strokeColor="?colorOnSurface"
    app:strokeWidth="1dp"
    android:layout_margin="5dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/item_portfolio_adapter"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/item_weight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_metal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:padding="8dp"
                android:textColor="?colorSurface"
                android:textStyle="bold"
                style="@style/item_portfolio_adapter"
                android:background="@drawable/background_date"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:id="@+id/item_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/item_portfolio_adapter"
                app:layout_constraintTop_toBottomOf="@+id/item_name"
                app:layout_constraintBottom_toTopOf="@+id/item_units_purchased"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/item_units_purchased"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/item_portfolio_adapter"
                app:layout_constraintBottom_toTopOf="@+id/item_purchase_price"
                app:layout_constraintTop_toBottomOf="@+id/item_weight"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/item_purchase_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/item_portfolio_adapter"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toBottomOf="@+id/item_units_purchased"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!--            <TextView-->
<!--                android:id="@+id/item_total_purchase_price"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="18sp"/>-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>




